{
  "manifest_version": 2,
  "name": "Goodreads Download Buttons",
  "version": "1.0.0",
  "description": "Adds download buttons to Goodreads.",
  
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "permissions": [
    "webNavigation",
    "activeTab",
    "https://www.goodreads.com/*"
  ],

  "background": {
    "scripts": ["background/main.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://www.goodreads.com/book/*"],  
      "js": ["content/styles.js", "content/button.js", "content/main.js"]
    }
  ],

  "browser_action": {
    "default_title": "Goodreads Download Buttons",
    "default_icon": {
      "16": "assets/icon.png",
      "32": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  }
} 