{
  "manifest_version": 2,
  "name": "Goodreads Download Buttons",
  "version": "1.0",
  "description": "Adds download buttons to Goodreads book pages to help find books on various download sites.",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "goodreads-download-buttons"
    }
  },

  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "assets/icon.png",
      "32": "assets/icon.png"
    }
  },

  "permissions": [
    "webNavigation",
    "*://www.goodreads.com/*"
  ],

  "background": {
    "scripts": ["background/main.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://www.goodreads.com/book/*"],
      "js": ["content/main.js", "content/button.js", "content/styles.js"]
    }
  ]
} 